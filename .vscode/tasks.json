{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Preview Site",
            "type": "shell",
            "command": "hugo server --buildDrafts --buildFuture",
            "group": "build",
            "problemMatcher": []
        },
        {
            "type": "npm",
            "label": "Dev Styles",
            "script": "dev",
            "options": {
                "cwd": "${workspaceRoot}/themes/local"
            },
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
        }
    ]
}
