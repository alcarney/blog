{
    "[html]": {
        "editor.formatOnSave": false
    },
    "[restructuredtext]": {
        "editor.tabSize": 3,
        "editor.wordWrap": "bounded",
        "editor.wordWrapColumn": 120
    },
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
        "**/__pycache__": true
    },
    "html.format.wrapLineLength": 0,
    "python.formatting.provider": "black"
}
